{
  "name": "little-guitar-monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "吉他学习应用 monorepo 项目",
  "workspaces": [
    "packages/*",
    "packages/apps/*",
    "packages/cloudfunctions/*"
  ],
  "scripts": {
    "dev": "pnpm -C packages/apps/web dev",
    "build": "pnpm -C packages/apps/web build",
    "build:all": "pnpm -r build",
    "lint": "pnpm -r lint",
    "type-check": "pnpm -r type-check",
    "test": "pnpm -r test",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "deploy:web": "pnpm -C packages/apps/web deploy",
    "deploy:functions": "pnpm -C packages/cloudfunctions deploy",
    "deploy:all": "pnpm deploy:functions && pnpm deploy:web",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build:all && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3",
    "turbo": "^1.12.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.4"
}